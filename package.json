    "type": "git",
    "url": "https://github.com/your-org/solana-security-patterns"
  },
  "keywords": [
    "solana",
    "anchor",
    "security",
    "education",
    "smart-contracts",
    "blockchain"
  ],
  "author": "Superteam Security Education",
  "license": "MIT",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
